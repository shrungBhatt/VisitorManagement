<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/list_item_monument_image_view"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/background_dark"/>

        <ProgressBar
            android:id="@+id/list_item_rush_status"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:layout_below="@id/list_item_monument_image_view"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:progress="80"/>

        <TextView
            android:id="@+id/list_item_monument_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/list_item_monument_image_view"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/list_item_monument_ratingbar"
            style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/list_item_rush_status"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>

